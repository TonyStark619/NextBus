{
  "name": "nextbus-realtime-tracking",
  "version": "1.0.0",
  "description": "Real-time public transport tracking for small cities",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "cd server && npm run dev",
    "client:dev": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "install:all": "npm install && cd server && npm install && cd ../client && npm install",
    "postinstall": "npm run install:all"
  },
  "keywords": [
    "public-transport",
    "real-time",
    "bus-tracking",
    "maps",
    "websockets",
    "nodejs",
    "express"
  ],
  "author": "NextBus Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "concurrently": "^8.2.2"
  },
  "devDependencies": {},
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/nextbus-realtime-tracking.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/nextbus-realtime-tracking/issues"
  },
  "homepage": "https://github.com/your-username/nextbus-realtime-tracking#readme"
}